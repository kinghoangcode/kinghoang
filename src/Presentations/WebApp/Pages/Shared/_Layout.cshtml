<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="king-page">

    <header class="king-header" hidden>
        <div class="king-navbar">
            <div class="king-brand">
                <img class="king-crown" src="~/imgs/Crown.png" alt="crown" />
                <h5 class="king-brand-name">King Hoang</h5>
            </div>
            <h5 class="king-brand-coffee">Cà Phê Muối</h5>
        </div>
    </header>

    <div class="king-body">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>